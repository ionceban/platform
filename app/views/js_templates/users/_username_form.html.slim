= form_for User.new,
    :remote => true,\
    :url => '/users/${user_id}/update_username',\
    :method => :put,
    :html => {\
      :class => 'user area username-form',\
      :data => {\
        :ok_icon_path => theme_image_path('ok.png'),\
        :error_icon_path => theme_image_path('stop.png')\
      },\
      :id => 'update-username'\
    } do |f|
  table.user-edit
    tr
      td= f.text_field :name, :size => 16, :maxlength => 64, :placeholder => "Full Name"
      td.form-action-wrap
        = f.submit " #{t('change')} &raquo; ".html_safe, :id => 'user_create_button'
        = link_to t('cancel'), '#', :class => 'close-username-edit'
      td.messages
