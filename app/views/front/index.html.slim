#welcome.nav
  section#dashboard
    table#welcome_apps
      - if @apps.size > 6
        = render :partial => 'pair', :collection => @apps.in_groups_of(2)
      - else
        = render :partial => 'app', :collection => @apps

      - if @apps.length < 3
        tr
         td
           = link_to(theme_image_tag('dashboard.png', :title => "Install applications!"), apps_path)

  - if @news
    section#latest_news
      #ln_inner
        #ln_header
          h3
            = t('latest_news')
        #ln_content
          ul
            = render :partial => 'news', :collection => @news
          span#more_news
            = link_to(t("more_news"), "http://blog.amahi.org/")
